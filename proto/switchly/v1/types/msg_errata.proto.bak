syntax = "proto3";
package types;

option go_package = "gitlab.com/switchly/switchlynode/v3/x/switchly/types";

import "gogoproto/gogo.proto";
import "common/common.proto";
import "amino/amino.proto";

message MsgErrataTx {
  option (amino.name) = "switchly/MsgErrataTx";

  string tx_id = 1 [(gogoproto.casttype) = "gitlab.com/switchly/switchlynode/v3/common.TxID", (gogoproto.customname) = "TxID"];
  string chain = 2 [(gogoproto.casttype) = "gitlab.com/switchly/switchlynode/v3/common.Chain"];
  bytes signer = 3 [(gogoproto.casttype) = "github.com/cosmos/cosmos-sdk/types.AccAddress", (amino.encoding) = "bech32"];
}

message MsgErrataTxQuorum {
  option (amino.name) = "switchly/MsgErrataTxQuorum";

  common.QuorumErrataTx quoErrata = 1;
  bytes signer = 2 [(gogoproto.casttype) = "github.com/cosmos/cosmos-sdk/types.AccAddress", (amino.encoding) = "bech32"];
}
